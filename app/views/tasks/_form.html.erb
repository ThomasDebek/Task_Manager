<%= form_with(model: task, class: "space-y-6") do |form| %>

  <% if task.errors.any? %>
    <div class="rounded-lg border border-red-200 bg-red-50 p-4 text-red-800">
      <h2 class="mb-2 font-semibold">
        <%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:
      </h2>

      <ul class="list-inside list-disc text-sm">
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- TITLE -->
  <div>
    <%= form.label :title, class: "mb-1 block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title,
                        class: "w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm
                focus:border-indigo-500 focus:ring focus:ring-indigo-200" %>
  </div>

  <!-- DESCRIPTION -->
  <div>
    <%= form.label :description, class: "mb-1 block text-sm font-medium text-gray-700" %>
    <%= form.text_field :description,
                        class: "w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm
                focus:border-indigo-500 focus:ring focus:ring-indigo-200" %>
  </div>

  <!-- COMPLETED -->
  <div class="flex items-center gap-2">
    <%= form.checkbox :completed,
                      class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
    <%= form.label :completed, class: "text-sm text-gray-700" %>
  </div>

  <!-- SUBMIT -->
  <div class="flex justify-end">
    <%= form.submit "Save task",
                    class: "rounded-lg bg-indigo-600 px-6 py-2 text-sm font-semibold text-white
                shadow hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

<% end %>